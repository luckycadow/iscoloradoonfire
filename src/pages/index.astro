---
import Layout from '@layouts/Layout.astro'
import { loadFires } from '@utils/fires'
import Fires from '@components/Fires.astro'
import PageMessage from '@components/PageMessage.astro'

const fires = await loadFires()
const onFire = Boolean(fires.length)
const title = onFire ? 'Yes, Colorado is on fire' : "No, Colorado isn't on fire"
---

<Layout title={title}>
  {
    onFire ? (
      <Fires fires={fires} />
    ) : (
      <PageMessage message="YAY! Colorado isn't on fire" />
    )
  }
</Layout>
