---
import type { Fire } from '../utils/fires'

export interface Props {
  fire: Fire
}

const { fire } = Astro.props
---

<div class="p-6 w-screen">
  <div
    class="card bg-white bg-opacity-60 backdrop-blur dark:bg-neutral rounded-box h-40 lg:h-48 z-20"
  >
    <div class="card-body">
      <button class="btn btn-square btn-sm text-sm absolute top-4 right-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
          fill="currentColor"
          height="1em"
          width="1em"
        >
          <path
            d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"
          >
          </path>
        </svg>
      </button>
      <h2 class="card-title">{fire.title}</h2>
      <p class="overflow line-clamp-3 lg:line-clamp-4">{fire.description}</p>
    </div>
  </div>
</div>
